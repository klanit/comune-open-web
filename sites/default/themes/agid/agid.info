;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

;stylesheets[all][] = css/style.css
;stylesheets[all][] = bootstrap/assets/stylesheets/bootstrap.scss
;stylesheets[all][] = scss/main.scss
;stylesheets[all][] = css/spid-button.min.css

